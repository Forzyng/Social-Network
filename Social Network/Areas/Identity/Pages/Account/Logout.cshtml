@page
@model LogoutModel
@{
    ViewData["Title"] = "Log out";
}


<header>
    <h1>@ViewData["Title"]</h1>
    @{
        if (User.Identity.IsAuthenticated)
        {
            <form class="form-inline" style="text-align: center;" align="center" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                <button style="text-align: center" type="submit" align="center" class="btn btn-dark align-self-center">Click here to Logout</button>
            </form>
        }
        else
        {
            <p>You have successfully logged out of the application.</p>
        }
    }
</header>