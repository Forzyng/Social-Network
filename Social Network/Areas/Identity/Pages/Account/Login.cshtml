	</head>
	<body class="img js-fullheight" style="background-image: url(/storage/default/auth_reg_background.jpg);">
	<section class="ftco-section">
		<div class="container">
			
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center">@ViewData["Title"]</h3>
                  <div asp-validation-summary="All" class="text-danger"></div>
		      	<form id="account" method="post" class="signin-form">
		      		<div class="form-group">
		      			<input asp-for="Input.Information"  class="form-control" placeholder="E-mail or Login" >
                          <span asp-validation-for="Input.Information" class="text-danger"></span>
		      		</div>
	            <div class="form-group">
	              <input asp-for="Input.Password" id="password-field" class="form-control" placeholder="Password" required>
	              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
	            </div>
	            <div class="form-group">
	            	<button id="buttonSend" type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
	            </div>
	            <div class="form-group d-md-flex">
	            	<div class="w-50">
		            	<label class="checkbox-wrap checkbox-primary">Remember Me
									  <input asp-for="Input.RememberMe" type="checkbox" checked>
									  <span class="checkmark"></span>
									</label>
								</div>
								<div class="w-50 text-md-right">
									<a href="/Home/Help" style="color: #fff">Any problems?</a>
								</div>
	            </div>

	          </form>
	         
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="/js/jquery.min.js"></script>
