<head>
  	
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

	<link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	
	<link rel="stylesheet" href="~/css/style.css">

	</head>
	<body class="img js-fullheight" style="background-image: url(/storage/default/auth_reg_background.jpg);">
	<section class="ftco-section">
		<div class="container">
			
			<div class="row justify-content-center">
				<div class="col-md-6 col-lg-4">
					<div class="login-wrap p-0">
		      	<h3 class="mb-4 text-center" style="margin-top: 0;">@ViewData["Title"]</h3>
                  <div asp-validation-summary="All" class="text-danger"></div>
		      	<form id="account" method="post" class="signin-form">

		      		<div class="form-group">
		      			<input asp-for="Input.Email"  class="form-control" placeholder="E-mail" >
                          <span asp-validation-for="Input.Email" class="text-danger"></span>
		      		</div>
                      
		      		<div class="form-group">
		      			<input asp-for="Input.Login"  class="form-control" placeholder="Login" >
                          <span asp-validation-for="Input.Login" class="text-danger"></span>
		      		</div>
                 
                       
	            <div class="form-group">
	              <input asp-for="Input.Password" id="password-field" class="form-control" placeholder="Password">
	              <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                  <span asp-validation-for="Input.Password" class="text-danger"></span>
	            </div>
                <div class="form-group">
	              <input asp-for="Input.ConfirmPassword" id="password-field" class="form-control" placeholder="Confirm Password">
	              
                  <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
	            </div>


	            <div class="form-group">
	            	<button id="buttonSend" type="submit" class="form-control btn btn-primary submit px-3">Continue</button>
	            </div>
	          
	          </form>
	         
		      </div>
				</div>
			</div>
		</div>
	</section>

	<script src="/js/jquery.min.js"></script>
  <script src="/js/popper.js"></script>
  <script src="/js/bootstrap.min.js"></script>
  <script src="/js/main.js"></script>

